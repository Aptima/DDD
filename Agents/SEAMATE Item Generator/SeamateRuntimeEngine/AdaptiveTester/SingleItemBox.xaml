<UserControl x:Class="AdaptiveTester.SingleItemBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="45">
    <Border BorderThickness="1" CornerRadius="8" BorderBrush="Black" Name="myBorder">
      <Grid>
            <Label x:Name="idLabel" Content="ID" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <Border.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFDED9D9" Offset="0.975" />
                <GradientStop Color="#FF898989" Offset="0" />
            </RadialGradientBrush>
        </Border.Background>
    </Border>
    
</UserControl>
